7) getauthorgivenid

 Request
{
	method : "getauthorgivenid",
	authorid : "<id>"
}

Response
{
	status : SUCCESS,
	result : [
		{
		_id : "<id>",
		name : {
					firstName : "manoj",
					middleName : "R"
					lastName : "thakur"
				},
		gender : M,
		dob : 12321312,
		nationality : "Indian",
		imageFile : "/tmp/img3.jpg",
		shortBio : "jrcbkuhgr grlfgruflrgflrgfk, gfkjsdgf,sjdg flksjagf",
		infoLink : "http://google.com",
		genre : "Fiction"
		
		},{...} ,{....}
	]
}

